{% if($attribute->getType() == Codeforge\Attribute::TYPE_BOOL): %}
<?php echo $form->dropdownList($model, '{%= attribute_id($attribute) %}', array(
	1 => Yii::t('admin.crud', 'Yes'),
	0 => Yii::t('admin.crud', 'No'),
), array(
{% if($attribute->getIsCollection()): %}
	'multiple' => true,
{% endif %}
	'class' => 'form-control',
	'prompt' => {% if ('search' == $mode): %}''{% else: %}Yii::t('admin.crud', 'Select Value'){% endif %},
)); ?>
{% elseif($attribute->getType() == Codeforge\Attribute::TYPE_INTOPTION || $attribute->getType() == Codeforge\Attribute::TYPE_STROPTION): %}
<?php echo $form->dropdownList($model, '{%= attribute_id($attribute) %}', array(
{% foreach ($attribute->getOptions() as $key => $value): %}
	{%= escape_value($key) %} => {%= escape_value($value) %},
{% endforeach %}
), array(
{% if($attribute->getIsCollection()): %}
	'multiple' => true,
{% endif %}
	'class' => 'form-control',
	'prompt' => {% if ('search' == $mode): %}''{% else: %}Yii::t('admin.crud', 'Select Value'){% endif %},
)); ?>
{% elseif($attribute->getType() == Codeforge\Attribute::TYPE_CUSTOM): %}
<?php echo $form->dropdownList($model, '{%= attribute_id($attribute) %}', {%= $attribute->getCustomType() %}::getList(), array(
{% if($attribute->getIsCollection()): %}
	'multiple' => true,
{% endif %}
	'class' => 'form-control',
	'prompt' => {% if ('search' == $mode): %}''{% else: %}Yii::t('admin.crud', 'Select Value'){% endif %},
)); ?>
{% endif %}
